<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="ProfileChangePassword" prefHeight="1000" prefWidth="1500" styleClass="changePassword"
            stylesheets="@../CSSFiles/ProfileChangePassword.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.view.ProfileMenu">
    <children>
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0d253b7c" height="580.0" layoutX="360.0" layoutY="184.0"
                   stroke="BLACK" strokeType="INSIDE" width="768.0"/>
        <Button layoutX="851.0" layoutY="695.0" mnemonicParsing="false" onMouseClicked="#submitPasswordButtonClicked"
                prefHeight="52.0" prefWidth="135.0" text="submit"/>

        <VBox alignment="CENTER" layoutX="441.0" layoutY="276.0" prefHeight="409.0" prefWidth="620.0">
            <children>

                <PasswordField fx:id="oldPasswordTextField" prefHeight="56.0" prefWidth="618.0" promptText="Old-Password"
                           styleClass="OldPasswordTextField" stylesheets="@../CSSFiles/Text.css">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </PasswordField>
                <Label fx:id="oldPasswordError" prefHeight="40.0" prefWidth="441.0" text="" textFill="red">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <PasswordField fx:id="newPasswordTextField" prefHeight="52.0" prefWidth="234.0" promptText="New-Password"
                           styleClass="NewPasswordTextField" stylesheets="@../CSSFiles/Text.css">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </PasswordField>
                <Label fx:id="newPasswordError" prefHeight="40.0" prefWidth="441.0" text="" textFill="red">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>

                <Label fx:id="result" prefHeight="30.0" prefWidth="435.0" text="" textFill="red">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
            </children>
        </VBox>
        <Button layoutX="538.0" layoutY="695.0" mnemonicParsing="false" onMouseClicked="#backFromPasswordButtonClicked"
                prefHeight="52.0" prefWidth="135.0" text="back"/>
    </children>
</AnchorPane>
