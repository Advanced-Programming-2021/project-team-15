                              <Button mnemonicParsing="false" onMouseClicked="#decreaseCardCount" prefHeight="30.0" prefWidth="130.0" styleClass="backPurple" text="Decrease Card">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                              <TextField fx:id="decreaseCardCountTF" prefHeight="26.0" prefWidth="50.0" promptText="Count" styleClass="backPurple">
                                 <cursor>
                                    <Cursor fx:constant="TEXT" />
                                 </cursor>
                              </TextField>
