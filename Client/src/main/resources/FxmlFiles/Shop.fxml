                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                              <TextField fx:id="increaseCardCountTF" prefHeight="26.0" prefWidth="50.0" promptText="Count" styleClass="backPurple">
