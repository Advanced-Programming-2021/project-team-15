            <Font name="System Bold" size="40.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <Button layoutX="620.0" layoutY="635.0" mnemonicParsing="false" onMouseClicked="#submit" prefHeight="124.0" prefWidth="259.0" styleClass="white" stylesheets="@../CSSFiles/Button.css" text="Submit">
         <font>
            <Font size="41.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
